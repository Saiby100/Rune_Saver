#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import IconDrawerManager widgets.icondrawermanager.IconDrawerManager
#:import ToolTipIconButton widgets.buttons.ToolTipIconButton

#CUSTOM WIDGETS
<ItemHolder>:
    orientation: 'horizontal'
    size_hint: None, None
    height: 40
    width: self.minimum_width

    Image: 
        size_hint_x: None
        width: 40
        source: f'icons/items/{root.items[0]}.png'
    Image: 
        size_hint_x: None
        width: 40
        source: f'icons/items/{root.items[1]}.png'
    Image: 
        size_hint_x: None
        width: 40
        source: f'icons/items/{root.items[2]}.png'
    Image: 
        size_hint_x: None
        width: 40
        source: f'icons/items/{root.items[3]}.png'
    Image: 
        size_hint_x: None
        width: 40
        source: f'icons/items/{root.items[4]}.png'
    Image: 
        size_hint_x: None
        width: 40
        source: f'icons/items/{root.items[5]}.png'

<MatchListItem>:
    md_bg_color: app.theme_cls.bg_light
    size_hint_y: None
    height: 50
    
    Image: 
        size_hint: None, None
        size: 40, 40
        pos_hint: {'center_x': .04, 'center_y': .5}
        source: f'icons/champ_icons/{root.champ}.png'

    ItemHolder:
        pos_hint: {'center_x': .34, 'center_y': .5}
        items: root.items

    MDLabel: 
        text: root.kda
        adaptive_width: True
        pos_hint: {'center_x': .65, 'center_y': .5}
        theme_text_color: 'Custom'
        text_color: get_color_from_hex('#a3a9ad')
    
    MDLabel: 
        text: root.farm
        adaptive_width: True
        pos_hint: {'center_x': .85, 'center_y': .5}
        theme_text_color: 'Custom'
        text_color: get_color_from_hex('BBB488')

    Image: 
        size_hint: None, None
        size: 13, 20
        pos_hint: {'center_x': .84, 'center_y': .5}
        source: 'icons/farm.png'

    Widget:
        pos_hint: {'x': .982} 
        canvas:
            Color: 
                rgba: get_color_from_hex('327A8F') if root.won else get_color_from_hex('932B26')
            Rectangle:
                size: 15, 50
                pos: self.pos

                
<ChampCard>:
    #Card used on the champ select page
    orientation: 'vertical'
    size_hint: None, None
    radius: '40dp'
    padding: 7
    spacing: 5
    size: 150, 150
    on_release: root.build_rune()

    Image: 
        source: root.source
        allow_stretch: True
        keep_ratio: False
    
    MDLabel:
        text: root.text
        size_hint_y: None
        adaptive_height: True
        font_style: 'Body2'
        halign: 'center'

<ImageButton>:
    #Buttons used in IconDrawer
    size_hint: .15, 1
    allow_stretch: True

<ListItem>:
    #Used in Content object on the BuildRune page
    on_release: root.update_panel_title()

    ImageLeftWidget:
        source: root.source

<RuneCard>:
    #Cards on ViewRune page
    orientation: 'vertical'
    padding: '5dp'
    spacing: '5dp'
    radius: '25dp'
    md_bg_color: app.theme_cls.bg_normal
    on_release: root.view_attribute()

    Image:
        source: root.source
        allow_stretch: True
    
    MDLabel: 
        text: root.txt
        halign: 'center'


<CustomIconListItem>:
    #Widget used in dropdown menus and account switching
    theme_text_color: 'Custom'
    text_color: app.theme_cls.text_color
    divider: None
    ripple_scale: 0

    IconLeftWidget:
        icon: root.icon
        theme_text_color: 'Custom'
        text_color: root.text_color

<CustomIconAvatarListItem>:
    #Rune on Library page
    text: root.text
    ripple_scale: 0
    divider: None
    on_release: root.select_rune()
    
    ImageLeftWidget:
        id: img
        source: root.source

<DetailsCard>:
    size_hint_x: None
    size_hint_y: None
    radius: '30dp'
    width: 300
    padding: 5
    spacing: 50
    md_bg_color: app.theme_cls.bg_normal

    Image:
        source: root.source
        size_hint_x: .3
    
    MDLabel:
        text: root.text
        size_hint_x: .7

#SCREENS
<PlayerProfile>:
    MDGridLayout:
        cols: 2

        ScrollView:
            size_hint_x: .3
            padding: [10, 0]
            scroll_type: ['bars']
            scroll_wheel_distance: 50
            effect_cls: 'ScrollEffect'

            MDList:

                NavItem:
                    text: 'Profile'
                    icon: 'account'
                    text_color: app.theme_cls.primary_color
                    on_release: 
                        app.change_screen('profile')

                NavItem: 
                    text: 'Rune Library'
                    icon: 'library'
                    on_release: 
                        app.change_screen('library')
                
                NavItem: 
                    text: 'Match History'
                    icon: 'history'
                    on_release: 
                        app.change_screen('match_history')
        
        MDGridLayout:
            cols: 1
            spacing: 40
            Image:
                source: root.banner_src
                allow_stretch: True
                keep_ratio: False
                size_hint_y: .5

            MDGridLayout:
                cols: 2
                spacing: 50
                padding: [15, 0]

                MDGridLayout: 
                    cols: 1
                    spacing: 5

                    DetailsCard:
                        text: root.player_details
                        source: root.icon
                    DetailsCard:
                        text: root.player_rank_details
                        source: root.player_rank_img

                MDRelativeLayout: 
                    MDGridLayout: 
                        pos_hint: {'top': 1}
                        cols: 3
                        size_hint_y: .3
                        spacing: 10

                        Image: 
                            source: root.champ2
                        Image: 
                            source: root.champ1
                        Image: 
                            source: root.champ3

    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'bottom'
        padding: 20

        ToolTipIconButton:
            icon: 'refresh'
            tooltip_text: 'Update Player Data'
            on_release: root.check_local_api_key()


<MatchHistory>:
    MDGridLayout:
        cols: 2

        ScrollView:
            size_hint_x: .3
            padding: [10, 0]
            scroll_type: ['bars']
            scroll_wheel_distance: 50
            effect_cls: 'ScrollEffect'

            MDList:

                NavItem:
                    text: 'Profile'
                    icon: 'account'
                    on_release: 
                        app.change_screen('profile')

                NavItem: 
                    text: 'Rune Library'
                    icon: 'library'
                    on_release: 
                        app.change_screen('library')
                
                NavItem: 
                    text: 'Match History'
                    icon: 'history'
                    text_color: app.theme_cls.primary_color
                    on_release: 
                        app.change_screen('match_history')

        ScrollView:
            scroll_type: ['bars']
            scroll_wheel_distance: 50
            effect_cls: 'ScrollEffect'
            MDList:
                spacing: 5
                padding: [0, 15]
                id: layout

    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'bottom'
        padding: 20

        ToolTipIconButton:
            icon: 'refresh'
            tooltip_text: 'Refresh'
            on_release: root.refresh_player_matches()

<Library>:
    MDGridLayout:
        cols: 2

        ScrollView:
            size_hint_x: .3
            padding: [10, 0]
            scroll_type: ['bars']
            scroll_wheel_distance: 50
            effect_cls: 'ScrollEffect'

            MDList:

                NavItem:
                    text: 'Profile'
                    icon: 'account'
                    on_release:
                        app.change_screen('profile')

                NavItem:
                    text: 'Rune Library'
                    icon: 'library'
                    text_color: app.theme_cls.primary_color
                    on_release:
                        app.change_screen('library')
                
                NavItem:
                    text: 'Match History'
                    icon: 'history'
                    on_release: 
                        app.change_screen('match_history')
        
        MDGridLayout: 
            cols: 1
            spacing: 10
            padding: [5, 10]

            MDGridLayout:
                cols: 2
                spacing: 20
                padding: [10, 5]
                size_hint_y: None
                size: 1, 50
                #md_bg_color: get_color_from_hex('#eb4034')

                MDTextField:
                    hint_text: 'search'
                    icon_right: 'magnify'
                    icon_right_color: app.theme_cls.primary_color
                
                    #on_text: 
                        #root.make_rune_list(self.text, True)

                AnchorLayout:
                    id: account_btn_layout
                    anchor_x: 'right'
                    anchor_y: 'top'
                    padding: 2
                    size_hint_x: None
                    width: 250

                    MDRoundFlatIconButton:
                        id: account_btn
                        icon: 'account-circle'
                        text: root.profile_name()

                        on_release:
                            root.drop_menu.caller = self
                            root.drop_menu.open()


            ScrollView:
                scroll_type: ['bars']
                scroll_wheel_distance: 50
                effect_cls: 'ScrollEffect'
                MDList:
                    id: my_runes
                    padding: [5, 0]
    

    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'bottom'
        padding: 20
        
        MDIconButton: 
            icon: 'plus'
            on_release: root.champ_select()

<ViewRune>:
    MDGridLayout:
        cols: 1

        MDTopAppBar:
            id: toolbar
            left_action_items:
                [['arrow-left', root.go_back]]
            md_bg_color: app.theme_cls.bg_normal
                
        MDGridLayout: 
            id: rune_grid
            cols: 2
            spacing: 5
            padding: 10

<InfoPage>: 

    MDBoxLayout: 
        orientation: 'vertical'
        padding: 10
        pos_hint: {'center_x': .5, 'center_y': .5}
        spacing: 10

        MDCard: 
            orientation: 'vertical'
            padding: [20, 5]
            radius: '25dp'
            spacing: '10dp'
            md_bg_color: app.theme_cls.bg_normal

            RelativeLayout:
                Image:
                    id: rune_img
                    size_hint_y: None
                    pos_hint: {'center_x': .5, 'top': .98}
                
                MDLabel:
                    id: attr_title
                    halign: 'center'
                    font_style: 'H6'
                    size_hint_y: None
                    pos_hint: {'center_x': .5, 'top': .9}
                
                MDLabel: 
                    id: attr_description
                    halign: 'left'
                    font_style: 'Subtitle2'
                    size_hint_y: None
                    height: self.texture_size[1]
                    pos_hint: {'top': .7}

    AnchorLayout: 
        anchor_x: 'left'
        anchor_y: 'top'
        padding: 15

        MDIconButton: 
            icon: 'arrow-left'
            on_release: root.go_back()


<ChampSelect>:
    MDBoxLayout:
        orientation: 'vertical'
        MDGridLayout:
            cols: 1
            padding: [70, 5]
            size_hint_y: None
            height: self.minimum_height

            MDTextField:
                hint_text: 'search'
                icon_right: 'magnify'
                icon_right_color: app.theme_cls.primary_color
        
        ScrollView:
            scroll_wheel_distance: 70
            effect_cls: 'ScrollEffect'
            scroll_type: ['bars']
            MDStackLayout:
                id: champ_grid 
                size_hint_y: None
                spacing: 10
                padding: [15, 5]
                height: self.minimum_height

    AnchorLayout:
        padding: 10
        anchor_x: 'left'
        anchor_y: 'top'

        MDIconButton:
            icon: 'arrow-left'
            on_release: root.go_back()


<BuildRune>:
    MDGridLayout: 
        cols: 1

        MDTopAppBar:
            id: toolbar
            title: root.title
            left_action_items: [['arrow-left', root.go_back]]
            right_action_items: [[f'icons/champ_icons/{root.champion}.png']]
            md_bg_color: app.theme_cls.bg_normal

        MDGridLayout:
            id: panel_grid
            cols: 2
            padding: 10
            spacing: [50, 0]
            IconDrawerManager:
                id: primary

            IconDrawerManager:
                id: secondary
                is_primary: False
            
    AnchorLayout: 
        anchor_x: 'right'
        anchor_y: 'bottom'
        padding: 10

        MDIconButton: 
            icon: 'check'
            tooltip_text: 'Done'
            on_release: root.show_save_box()
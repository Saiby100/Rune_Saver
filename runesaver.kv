#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import IconDrawerManager widgets.icondrawermanager.IconDrawerManager
#:import ToolTipIconButton widgets.buttons.ToolTipIconButton

#CUSTOM WIDGETS
<ChampCard>:
    #Card used on the champ select page
    orientation: 'vertical'
    size_hint: None, None
    radius: '40dp'
    size: 150, 150
    on_release: root.build_rune()

    Image: 
        source: root.source
        allow_stretch: True
        keep_ratio: False
        size_hint: None, None
        size: root.width, root.height-20
    
    MDLabel:
        text: root.text
        font_style: 'Body2'
        halign: 'center'

<ImageButton>:
    #Buttons used in IconDrawer
    size_hint: .15, 1
    allow_stretch: True

<ListItem>:
    #Used in Content object on the BuildRune page
    on_release: root.update_panel_title()

    ImageLeftWidget:
        source: root.source

<RuneCard>:
    #Cards on ViewRune page
    orientation: 'vertical'
    padding: '5dp'
    spacing: '5dp'
    radius: '25dp'
    md_bg_color: app.theme_cls.bg_normal
    on_release: root.view_attribute()

    Image:
        source: root.source
        allow_stretch: True
    
    MDLabel: 
        text: root.txt
        halign: 'center'


<CustomIconListItem>:
    #Widget used in dropdown menus and account switching
    theme_text_color: 'Custom'
    text_color: app.theme_cls.text_color
    divider: None
    ripple_scale: 0

    IconLeftWidget:
        icon: root.icon
        theme_text_color: 'Custom'
        text_color: root.text_color

<CustomIconAvatarListItem>:
    #Rune on Library page
    text: root.text
    ripple_scale: 0
    divider: None
    on_release: root.select_rune()
    
    ImageLeftWidget:
        id: img
        source: root.source

<Tab@MDFloatLayout+MDTabsBase>
    
#SCREENS
<PlayerProfile>:
    MDGridLayout:
        cols: 2

        ScrollView:
            size_hint_x: .3
            padding: [10, 0]
            scroll_type: ['bars']
            scroll_wheel_distance: 50
            effect_cls: 'ScrollEffect'

            MDList:

                NavItem:
                    text: 'Profile'
                    icon: 'account'
                    text_color: app.theme_cls.primary_color
                    on_release: 
                        app.change_screen('profile')

                NavItem: 
                    text: 'Rune Library'
                    icon: 'library'
                    on_release: 
                        app.change_screen('library')
                
                NavItem: 
                    text: 'Match History'
                    icon: 'history'
                    on_release: 
                        app.change_screen('match_history')
        
        MDGridLayout:
            cols: 1
            padding: 50
            spacing: 20

            MDGridLayout: 
                id: profile_details_grid
                cols: 2
                size_hint_y: .3
                adaptive_height: True
                #md_bg_color: get_color_from_hex('#3f3c6b')

            MDGridLayout: 
                id: rank_details_grid
                cols: 2
                size_hint_y: .3
                adaptive_height: True

            MDGridLayout: 
                id: champ_details_grid
                cols: 2
                size_hint_y: .3

    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'top'
        padding: 15

        ToolTipIconButton:
            icon: 'refresh'
            tooltip_text: 'Update Player Data'
            on_release: root.check_local_api_key()


<MatchHistory>:
    MDGridLayout:
        cols: 2

        ScrollView:
            size_hint_x: .3
            padding: [10, 0]
            scroll_type: ['bars']
            scroll_wheel_distance: 50
            effect_cls: 'ScrollEffect'

            MDList:

                NavItem:
                    text: 'Profile'
                    icon: 'account'
                    on_release: 
                        app.change_screen('profile')

                NavItem: 
                    text: 'Rune Library'
                    icon: 'library'
                    on_release: 
                        app.change_screen('library')
                
                NavItem: 
                    text: 'Match History'
                    icon: 'history'
                    text_color: app.theme_cls.primary_color
                    on_release: 
                        app.change_screen('match_history')
        MDLabel:
            halign: 'center'
            text: 'This is the player match history'

<Library>:
    MDGridLayout:
        cols: 2

        ScrollView:
            size_hint_x: .3
            padding: [10, 0]
            scroll_type: ['bars']
            scroll_wheel_distance: 50
            effect_cls: 'ScrollEffect'

            MDList:

                NavItem:
                    text: 'Profile'
                    icon: 'account'
                    on_release:
                        app.change_screen('profile')

                NavItem:
                    text: 'Rune Library'
                    icon: 'library'
                    text_color: app.theme_cls.primary_color
                    on_release:
                        app.change_screen('library')
                
                NavItem:
                    text: 'Match History'
                    icon: 'history'
                    on_release: 
                        app.change_screen('match_history')
        
        MDGridLayout: 
            cols: 1
            spacing: 10
            padding: [5, 10]

            MDGridLayout:
                cols: 2
                spacing: 20
                padding: [10, 5]
                size_hint_y: None
                size: 1, 50
                #md_bg_color: get_color_from_hex('#eb4034')

                MDTextField:
                    hint_text: 'search'
                    icon_right: 'magnify'
                    icon_right_color: app.theme_cls.primary_color
                
                    #on_text: 
                        #root.make_rune_list(self.text, True)

                AnchorLayout:
                    id: account_btn_layout
                    anchor_x: 'right'
                    anchor_y: 'top'
                    padding: 2
                    size_hint_x: None
                    width: 250

                    MDRoundFlatIconButton:
                        id: account_btn
                        icon: 'account-circle'
                        text: root.profile_name()

                        on_release:
                            root.drop_menu.caller = self
                            root.drop_menu.open()


            ScrollView:
                scroll_type: ['bars']
                scroll_wheel_distance: 50
                effect_cls: 'ScrollEffect'
                MDList:
                    id: my_runes
                    padding: [5, 0]
    

    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'bottom'
        padding: 20
        
        MDIconButton: 
            icon: 'plus'
            on_release: root.champ_select()

<ViewRune>:
    BoxLayout:
        orientation: 'vertical'

        MDToolbar:
            id: toolbar
            left_action_items:
                [['arrow-left', root.go_back]]
            md_bg_color: app.theme_cls.bg_normal
                
        MDTabs: 
            background_color: app.theme_cls.bg_normal
            indicator_color: app.theme_cls.primary_color
            Tab: 
                title: 'Rune'

                GridLayout: 
                    id: rune_grid
                    cols: 2
                    spacing: 5
                    padding: 10

                AnchorLayout:
                    anchor_x: 'right'
                    anchor_y: 'bottom'
                    padding: 30

                    #MDFloatingActionButton:
                        #id: edit_btn
                        #icon: 'pencil'
                        #on_release: root.edit_rune(root.rune)

            Tab: 
                title: 'Builds'
                MDLabel:
                    halign: 'center'
                    text: 'Page for viewing item builds'

<InfoPage>: 

    MDBoxLayout: 
        orientation: 'vertical'
        padding: 10
        pos_hint: {'center_x': .5, 'center_y': .5}
        spacing: 10

        MDCard: 
            orientation: 'vertical'
            padding: [20, 5]
            radius: '25dp'
            spacing: '10dp'
            md_bg_color: app.theme_cls.bg_normal

            RelativeLayout:
                Image:
                    id: rune_img
                    size_hint_y: None
                    pos_hint: {'center_x': .5, 'top': .98}
                
                MDLabel:
                    id: attr_title
                    halign: 'center'
                    font_style: 'H6'
                    size_hint_y: None
                    pos_hint: {'center_x': .5, 'top': .9}
                
                MDLabel: 
                    id: attr_description
                    halign: 'left'
                    font_style: 'Subtitle2'
                    size_hint_y: None
                    height: self.texture_size[1]
                    pos_hint: {'top': .7}

    AnchorLayout: 
        anchor_x: 'left'
        anchor_y: 'top'
        padding: 15

        MDIconButton: 
            icon: 'arrow-left'
            on_release: root.go_back()


<ChampSelect>:
    MDBoxLayout:
        orientation: 'vertical'
        MDGridLayout:
            cols: 1
            padding: [70, 5]
            size_hint_y: None
            height: self.minimum_height

            MDTextField:
                hint_text: 'search'
                icon_right: 'magnify'
                icon_right_color: app.theme_cls.primary_color
                mode: 'fill'
        
        ScrollView:
            scroll_wheel_distance: 70
            effect_cls: 'ScrollEffect'
            scroll_type: ['bars']
            MDStackLayout:
                id: champ_grid 
                size_hint_y: None
                spacing: 10
                padding: [15, 5]
                height: self.minimum_height

    AnchorLayout:
        padding: 10
        anchor_x: 'left'
        anchor_y: 'top'

        MDIconButton:
            icon: 'arrow-left'
            icon_size: '64sp'
            on_release: root.go_back()


<BuildRune>:
    MDBoxLayout: 
        orientation: 'vertical'

        MDToolbar:
            id: toolbar
            title: root.title
            left_action_items: [['arrow-left', root.go_back]]
            right_action_items: [[f'icons/champ_icons/{root.champion}.png']]
            md_bg_color: app.theme_cls.bg_normal

        MDTabs: 
            background_color: app.theme_cls.bg_normal
            indicator_color: app.theme_cls.primary_color
            Tab: 
                title: 'Rune'
                MDGridLayout:
                    id: panel_grid
                    cols: 2
                    padding: 10
                    spacing: [50, 0]
                    IconDrawerManager:
                        id: primary

                    IconDrawerManager:
                        id: secondary
                        is_primary: False
                        
            Tab:
                title: 'Build'
                MDLabel:
                    halign: 'center'
                    text: 'Page for adding item builds'
            
    AnchorLayout: 
        anchor_x: 'right'
        anchor_y: 'bottom'
        padding: 30

        MDIconButton: 
            icon: 'check'
            tooltip_text: 'Done'
            on_release: root.show_save_box()
#:import get_color_from_hex kivy.utils.get_color_from_hex

<SwipeToDeleteItem>:
    #Rune on Library page
    size_hint_y: None
    height: list_item.height

    MDCardSwipeLayerBox:
        MDIconButton:
            id: delete_icon
            icon: 'trash-can'

    MDCardSwipeFrontBox:
        OneLineAvatarListItem:
            id: list_item
            text: root.text
            ripple_scale: 0

            ImageLeftWidget:
                id: img
                source: root.source
       
<ItemDrawer>:
    #Navigation item on home screen
    text_color: app.theme_cls.text_color
    on_release: 
        sm.current = self.text
        self.parent.set_color_item(self)

    IconLeftWidget:
        icon: root.icon
        theme_text_color: 'Custom'
        text_color: root.text_color



<SplashScreen>:
    RelativeLayout: 
        orientation: 'vertical'

        Image: 
            source: 'icons/splash-icon.png'
            size_hint: None, None
            size: 100, 100
            pos_hint: {'center_x': .5, 'center_y': .5}

<Library>: 
    MDGridLayout: 
        cols: 2

        ScrollView:
            size_hint_x: .35
            padding: [10, 0]
            DrawerList:
                id: nav_drawer
                ItemDrawer:
                    text: 'Profile'
                    icon: 'account'

                ItemDrawer: 
                    text: 'Rune Library'
                    icon: 'plus'
                    text_color: app.theme_cls.primary_color
                
                ItemDrawer: 
                    text: 'Match History'
                    icon: 'plus'
                
                ItemDrawer: 
                    text: 'All Champions'
                    icon: 'plus'

                ItemDrawer: 
                    text: 'All Items'
                    icon: 'plus' 

        MDGridLayout: 
            cols: 1
            spacing: 5
            padding: [5, 10]

            MDTextField:
                hint_text: 'search'
                size_hint_x: None
                size_hint_y: None
                width: 450
                pos_hint: {'center_x': 1}


            ScrollView:
                scroll_type: ['bars']
                scroll_wheel_distance: 50
                effect_cls: 'ScrollEffect'
                MDList:
                    id: my_runes
                    padding: [5, 0]

    AnchorLayout: 
        anchor_x: 'right'
        anchor_y: 'bottom'
        padding: 20

        MDFloatingActionButton: 
            icon: 'plus'
            on_release: root.champ_select()

<ViewRune>:
    BoxLayout: 
        orientation: 'vertical'

        MDToolbar:
            id: toolbar
            left_action_items:
                [['arrow-left', root.go_back]]
                
        MDTabs: 
            Tab: 
                title: 'Rune'

                GridLayout: 
                    id: rune_grid
                    cols: 2
                    spacing: 5
                    padding: 10

                AnchorLayout:
                    anchor_x: 'right'
                    anchor_y: 'bottom'
                    padding: 30

                    MDFloatingActionButton:
                        id: edit_btn
                        icon: 'pencil'
                        on_release: root.edit_rune(root.rune)

            Tab: 
                title: 'Builds'

<InfoPage>: 

    MDBoxLayout: 
        orientation: 'vertical'
        padding: 10
        pos_hint: {'center_x': .5, 'center_y': .5}
        spacing: 10

        MDCard: 
            orientation: 'vertical'
            padding: [20, 5]
            radius: '25dp'
            spacing: '10dp'

            RelativeLayout:
                Image:
                    id: rune_img
                    size_hint_y: None
                    pos_hint: {'center_x': .5, 'top': .98}
                
                MDLabel:
                    id: attr_title
                    halign: 'center'
                    font_style: 'H6'
                    size_hint_y: None
                    pos_hint: {'center_x': .5, 'top': .9}
                
                MDLabel: 
                    id: attr_description
                    halign: 'left'
                    font_style: 'Subtitle2'
                    size_hint_y: None
                    height: self.texture_size[1]
                    pos_hint: {'top': .7}

    AnchorLayout: 
        anchor_x: 'left'
        anchor_y: 'top'
        padding: 15

        FloatingButton: 
            icon: 'arrow-left'
            on_release: root.go_back()


<ChampSelect>: 
    MDBoxLayout: 
        orientation: 'vertical'

        MDToolbar:
            title: 'Select Champion'
            left_action_items: [['arrow-left', root.go_back]]
        
        ScrollView:
            scroll_wheel_distance: 50
            effect_cls: 'ScrollEffect'
            scroll_type: ['bars']
            MDStackLayout:
                id: champ_grid 
                size_hint_y: None
                spacing: 10
                padding: 5
                height: self.minimum_height



<BuildRune>:
    MDBoxLayout: 
        orientation: 'vertical'

        MDToolbar:
            id: toolbar
            left_action_items: [['arrow-left', root.go_back]]

        MDTabs: 
            Tab: 
                title: 'Rune'

                ScrollView:
                    effect_cls: 'ScrollEffect'
                    scroll_type: ['bars']
                    scroll_wheel_distance: 50
                    MDGridLayout:
                        id: panel_grid
                        cols: 1
                        padding: [10, 0]
                        size_hint_y: None
                        height: self.minimum_height

            Tab:
                title: 'Build'
                
    AnchorLayout: 
        anchor_x: 'right'
        anchor_y: 'bottom'
        padding: 30

        FloatingButton: 
            icon: 'check'
            tooltip_text: 'Done'
            on_release: root.show_save_box()